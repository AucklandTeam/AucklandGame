{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"react",
		"react-hooks"
	],
	"rules": {
		"react-hooks/rules-of-hooks": "warn",
		"react-hooks/exhaustive-deps": "warn"
	},
	"env": {
		"browser": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
