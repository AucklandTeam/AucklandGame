{

  "exclude": ["node_modules", "oldCode"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
	"compilerOptions": {
		"skipLibCheck": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"],
			"server/*": ["src/server/*"],
			"client/*": ["src/client/*"],
			"components/*": ["src/client/components/*"],
			"shared/*": ["src/client/components/@shared/*"],
			"pages/*": ["src/client/pages/*"],
			"utils/*": ["src/client/utils/*"],
			"assets/*": ["src/client/assets/*"],
			"styles/*": ["src/client/styles/*"],
			"config/*": ["config/*"],
			"core/*": ["src/core/*"]
		},
		"typeRoots": ["@types", "node_modules/@types"]
	}
}
